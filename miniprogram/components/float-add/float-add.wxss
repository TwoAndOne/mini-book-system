/* components/float-add/float-add.wxss */
@import '/style/font.wxss';
.float-view {
  position:fixed;
  height:54px;
  width:54px;
  border-radius:2rem;
  background:#fff;
  color:white;
  text-align:center;
  line-height:60px;
  box-shadow:0px 1px 12px 2px rgba(0,0,0,0.2);
}

.float-add {
  font-size:36px;
  color:#696969;
  opacity:0.9;
  line-height:54px;
}

.float-camera {
  font-size:28px;
  color:#696969;
  opacity:0.7;
  line-height:56px;
}