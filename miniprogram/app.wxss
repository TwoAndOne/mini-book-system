/**app.wxss**/
@import './style/font.wxss';
@import './style/table.wxss';

page {
  background: #eceff5;
}
.container {
  font-size: 14px;
  color: #284058;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 
.has-fixed-bottom {
  margin-bottom: 74px;
}
.form-info {
  width: 100%;
  background: #FFF;
}
.input-item {
  padding: 10px 10px 10px 80px;
  position: relative;
  box-sizing: border-box;
  background: #FFF;
}
.input-item-label {
  height: 28px;
  line-height: 28px;
  position: absolute;
  left: 14px;
  margin-top: 4px;
}
.input-item-text {
  height: 32px;
  line-height: 32px;
  width: 90%;
  padding: 0 10px;
  border-bottom: 1px solid #c8d0dc;
}
.input-item-area {
  height: 60px;
  width: 90%;
  padding: 10px;
  line-height: 20px;
  border: 1px solid #c8d0dc;
  overflow-y:auto;
}
.input-icon {
  position:absolute;
  top:10px;
  right:22px;
  line-height:32px;
}
.btn-box {
  position:fixed;
  bottom:0;
  width:100%;
  background:#FFF;
  padding:14px;
  box-sizing:border-box;
  box-shadow: 0 2px 18px 0 rgba(0,0,0,.2);
  -webkit-box-shadow: 0 2px 18px 0 rgba(0,0,0,.2);
  -o-box-shadow: 0 2px 18px 0 rgba(0,0,0,.2);
  -ms-box-shadow: 0 2px 18px 0 rgba(0,0,0,.2);
}
.btn {
  background-color: #3378dd;
  color: #FFF;
}
.green {
  color: #009C00;
}
.yellow {
  color: yellowgreen;
}
.orange {
  color: orange;
}
.light-orange {
  color: wheat;
}
.dark-orange {
  color: #CD661D;
}
.red {
  color: red;
}