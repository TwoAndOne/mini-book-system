<!--miniprogram/pages/book/m-list/m-list.wxml-->
<view class="container">
  <view class="table">
    <view class="tr head">
      <view class="th">书名</view>
      <view class="th">作者</view>
      <view class="th">操作</view>
    </view>
    <block wx:for="{{booklist}}" wx:for-index="idx" wx:for-item="item" wx:key="{{item.id}}">
      <view class="tr">
        <view class="td">{{item.title}}</view>
        <view class="td">{{item.author}}</view>
        <view class="td">
          <button class="btn t-btn" id="{{item.id}}" bindtap="delete">删除</button>
          <button class="btn t-btn" id="{{item.id}}" bindtap='edit'>编辑</button>
        </view>
      </view>
    </block>
  </view>
</view>
