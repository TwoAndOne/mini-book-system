<!--miniprogram/pages/book/list/list.wxml-->
<view class="container">
  <view class="book" wx:for="{{booklist}}" wx:for-index="idx" wx:for-item="item" id="idx" wx:key="{{item.id}}" bindtap="toBookDetail">
    <image class="img" src="{{item.image}}" />
    <view class="info">
      <view class="title">{{item.title}}</view>
      <view class="author">{{item.author}}</view>
      <view class="available">
        当前可借数量：
        <text class="green" wx:if="{{item.available_num > 0}}">{{item.available_num}}</text>
        <text class="red" wx:if="{{item.available_num == 0}}">0</text>
      </view>
    </view>
  </view>
</view>
